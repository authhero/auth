{
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    // The following three options are set for
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["@cloudflare/workers-types", "@types/service-worker-mock"],
    "paths": {
      "*": ["node_modules/*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "include": ["src/**/*", "test/**/*", "integration-test/**/*", "scripts/**/*"]
}
